<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
<link href="~/Content/Style1.css" rel="stylesheet" />

<div class="main">
    <div class="form_search form_information">
        <div class="container">
            <div class="row">
                <h5>Tìm kiếm chứng từ điện tử</h5>
                <div class="col-sm-6">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="loai_chung_tu">Loại chứng từ</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="sel1" ng-model="doc.type">
                                        <option value="1">Phiếu xuất</option>
                                        <option value="2">Phiếu nhập</option>
                                        @*<option>3</option>*@
                                        @*<option>4</option>*@
                                    </select>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-sm-3" for="ma_chung_tu">Mã chứng từ</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="ma_chung_tu" ng-model="doc.Id">
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-sm-3" for="loai_chung_tu">Trạng thái</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="status" ng-model="doc.Status">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option>3</option>
                                        <option>4</option>
                                    </select>
                                </div>
                            </div>


                        </div>
                    </form>
                </div>
                <div class="col-sm-6">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label col-sm-3" for="ma_chung_tu">Đơn vị ban hành</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="don_vi_ban_hanh" ng-model="doc.Unit">

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3" for="ma_chung_tu">Tên chứng từ</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="ma_chung_tu" ng-model="doc.Name">

                                </div>
                            </div>


                            @*<div class="col-xs-12">
                                    <div class="col-xs-3 pd_0">
                                        <label class="pull-left" for="sel1">Ngày nhận</label>
                                        <label class="pull-left" for="sel1"> &nbsp; Từ ngày</label>
                                    </div>

                                    <div class="col-xs-3 pd_0">
                                        <input type="text" class="form-control pull-left" style="width:80%" ng-model="doc.StartDate">
                                    </div>

                                    <label class="col-xs-2 pd_0" for="sel1">Đến ngày:</label>
                                    <div class="col-xs-3 pd_0">
                                        <input type="text" class="form-control pull-left" style="width:80%" ng-model="doc.EndDate">
                                    </div>
                                </div>*@

                        </div>
                    </form>

                </div>

                <div class="col-xs-12 btn_center">

                    <button type="button" class="btn btn-primary" ng-click="searchDoc()">TÌM KIẾM</button>

                </div>
            </div>
        </div>
    </div>

    <div class="table_list">

        <table class="table table-bordered table-hover">
            <thead>
                <tr class="first_table">
                    <th class="text-center">STT</th>
                    <th class="text-center">Mã chứng từ</th>
                    <th class="text-center">Tên chứng từ</th>

                    <th class="text-center">Loại chứng từ</th>
                    <th class="text-center">Ngày ban hành</th>
                    <th class="text-center">Người ký</th>
                    <th class="text-center">Mã đơn vị</th>
                    <th class="text-center">Đơn vị ban hành</th>
                    <th class="text-center">Trạng thái</th>
                    @*<th class="text-center">Gửi xác thực</th>*@
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center" ng-repeat="data in chungtuList">
                    <td>{{$index+1}}</td>
                    <td><a href="#">{{data.MaChungTu}}</a></td>
                    <td>{{data.Ten}}</td>
                    <td>{{data.MaLoaiChungTu}}</td>
                    <td>{{data.NgayBanHanh}}</td>
                    <td>{{data.NguoiKy}}</td>
                    <td>{{data.MaDonVi}}</td>
                    <td>{{data.DonViBanHanh}}</td>
                    <td>{{data.TrangThai}}</td>
                    @*<td></td>*@
                    <td>
                        <a href="" ng-click="showDetailData(data)">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
        <ul class="pagination pagination-pager">
            <li><a href="#">1</a></li>
            <li class="active"><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
        </ul>


        <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg modal_dialog_content ">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="text-left">Thông tin chi tiết</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="loai_chung_tu">Loại chứng từ</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.MaLoaiChungTu}}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="ma_chung_tu">Mã chứng từ</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.MaChungTu}}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="ma_chung_tu">Ngày ban hành</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.NgayBanHanh}}
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-sm-6">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="ma_chung_tu">Đơn vị ban hành</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.DonViBanHanh}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="ma_chung_tu">Tên chứng từ</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.Ten}}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-3" for="ma_chung_tu">Người ký</label>
                                            <div class="col-sm-8">
                                                {{detailDoc.NguoiKy}}
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <p class="control-label"> File đính kèm </p>

                            <embed id="pfdPriview" ng-src="{{detailDoc.FileDinhKem}}"  width="100%" height="600px" />
                        </div>

                        <div class="row">
                            <div class="col-xs-12 btn_center">
                                <button type="button" class="btn btn-primary" data-target="#myModal" ng-click="proDoc()">Duyệt</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                            </div>
                           

                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

